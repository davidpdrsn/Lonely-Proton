%table
  %thead
    %tr
      %th Name
      %th Views #
      %th Controls
  %tbody
    - posts.each do |post|
      %tr
        %td= link_to post.title, post
        %td= pluralize post.number_of_views, "view"
        %td
          = link_to "Edit", edit_post_path(post)
          |
          = link_to "Destroy", post, method: :delete

