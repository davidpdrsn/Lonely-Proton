= link_to "Create new post", new_post_path

%div
  - if @posts.present?
    %ul
      - @posts.each do |post|
        %li
          = post.title
          |
          = link_to "Edit", edit_post_path(post)
          |
          -# TODO: make destroy post
          = link_to "Destroy", post, method: :delete
  - else
    There are no posts yet
